{
  "name": "copy-as-markdown-tools",
  "description": "精准选取网页元素，快速转换为 Markdown 格式的专业工具 - A professional tool for precise web element selection and fast Markdown conversion",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "keywords": [
    "chrome-extension",
    "markdown",
    "copy",
    "converter",
    "web-extension",
    "html-to-markdown",
    "productivity",
    "writing-tools",
    "element-picker",
    "text-selection",
    "shortcuts",
    "context-menu",
    "precision-copying"
  ],
  "author": {
    "name": "Copy as Markdown Tools Team"
  },
  "license": "MIT",
  "homepage": "https://cam.zilin.im",
  "repository": {
    "type": "git",
    "url": "https://github.com/hifizz/copy-as-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/hifizz/copy-as-markdown/issues"
  },
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "butteruptoasts": "^2.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.315",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@types/turndown": "^5.0.5",
    "@vitest/ui": "^3.1.4",
    "@wxt-dev/auto-icons": "^1.0.2",
    "@wxt-dev/module-react": "^1.1.3",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4",
    "wxt": "^0.20.2"
  }
}
